<%- include('../../partials/header') %>

<main class="admin-main">
    <h1>Create New User</h1>

    <% if (flash && flash.length > 0) { %>
    <section class="flash-messages">
        <% flash.forEach(msg => { %>
            <div class="flash <%= msg.type %>"><%= msg.message %></div>
        <% }); %>
    </section>
    <% } %>

    <form action="/admin/users/create" method="POST" class="admin-form">
        <div class="form-group">
            <label for="email">Email Address:</label>
            <input
                type="email"
                id="email"
                name="email"
                required
                maxlength="255"
                placeholder="Enter user's email"
            >
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input
                type="password"
                id="password"
                name="password"
                required
                minlength="6"
                placeholder="Enter a password"
            >
        </div>

        <div class="form-group">
            <label for="role_name">Role:</label>
            <select id="role_name" name="role_name" required>
                <option value="customer" selected>Customer</option>
                <option value="admin">Admin</option>
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="cta-button">Create User</button>
            <a href="/admin/users" class="secondary-link">Cancel</a>
        </div>
    </form>
</main>

<%- include('../../partials/footer') %>

<%- include('../partials/header') %>

<main class="admin-users-main">
    <h1>Manage Users</h1>

    <% if (users && users.length > 0) { %>
        <table class="users-table">
        <thead>
            <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.email %></td>
                <td><%= user.role_name %></td>
                <td><%= new Date(user.created_at).toLocaleString() %></td>
                <td>
                <!-- Placeholder links, replace with actual routes/actions -->
                <a href="/admin/users/edit/<%= user.id %>" class="action-link">Edit</a> |
                <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="action-link" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
        </table>
    <% } else { %>
        <p>No users found.</p>
    <% } %>

    <a href="/admin/users/create" class="cta-button">Add New User</a>
</main>

<%- include('../partials/footer') %>
